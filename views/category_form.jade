extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Name (Witchcraft)' name='name' required value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='description') Description:
      input#name.form-control(type='text', placeholder='Description (Mythical Art of Spell Casting)' name='description' required value=(undefined===category ? '' : category.description) )
    
    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg