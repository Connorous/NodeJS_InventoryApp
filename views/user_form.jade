extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='hacker123' name='username' required  )
    div.form-group
      label(for='password') Password:
      input#password.form-control( placeholder='password' name='password' required  )
  

    button.btn.btn-primary(type='submit') Submit

  br
  br
  if title === "Log In"
    p Don't have an account? Register Here:
    a(href='/register')
      button.btn.btn-primary() Register 
  else 
    p Already have an account? Log In Here:
    a(href='/login')
      button.btn.btn-primary() Login 


  if message 
    p=messsage

  if errors
    ul
      for error in errors
        li!= error.msg