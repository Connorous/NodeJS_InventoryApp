extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='hacker123' name='username' required )
    div.form-group
      label(for='password') Password:
      input#password.form-control( placeholder='password' name='password' required )
    if admin
       div.form-group
         label(for='admin') Admin:
         input#admin.form-control(type="checkbox" name='admin' required )
    

    button.btn.btn-primary(type='submit') Submit

  br
  br


  if message 
    p=messsage

  if errors
    ul
      for error in errors
        li!= error.msg